<PlayerPopup>:
    title: "Who Are You"
    auto_dismiss : False
    size_hint: 0.4,0.4
    BoxLayout:
        orientation:"vertical"
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1,0.7
            BoxLayout:
                orientation:"vertical"
                size_hint: 0.5,1
                Label:
                    text: "Name:"
                Label:
                    text: "PIN"
            BoxLayout:
                orientation:"vertical"
                size_hint: 0.5,1
                TextInput:
                    id: name_input
                    multiline: False
                TextInput:
                    id: pin_input
                    multiline: False
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1,0.3
            padding: 10
            spacing: 10
            Button:
                id: popup_btn
                on_press: root.make_player(self)
            Button:
                text: "Cancel"
                on_press: root.dismiss()

<OpenScreen>:
    BoxLayout:
        orientation: "vertical"
        Image:
            source: "../assets/images/CardBack.png"
            size_hint: 1,0.7
            pos_hint: {'center_x': 0.5, 'center_y':0.5}
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.3
            spacing: 50
            padding: 50
            Button:
                id: new_btn
                text: "New Player"
                on_press: root.player_pop(self)
                size_hint: 0.5,0.7
            Button:
                id: load_btn
                text: "Load Player"
                on_press: root.player_pop(self)
                size_hint: 0.5,0.7

<TestMenu>:
    BoxLayout:
        size_hint:0.5,0.8
        orientation:"vertical"
        padding:10
        spacing:10
        Label:
            text: "TESTING MENU"
            font_size: dp(40)
            color: root.get_color()
            size_hint: (0.9,0.2)
            pos_hint:{'center_y': 0.2,'center_x':0.5}
        GridLayout:
            cols:2
            size_hint: 0.9,0.4
            pos_hint:{'center_x':0.5,'center_y':0.8}
            padding:10
            spacing:25
            Button:
                id:sel_card_btn
                text:"Selectable Card"
                size_hint:(0.3,0.3)
                on_press: root.to_sel_card()
            Button:
                id:sel_hand_btn
                text:"Selectable Hand"
                size_hint:(0.3,0.3)
                on_press: root.to_sel_hand()
            Button:
                id: clients_btn
                text:"Show Clients"
                size_hint:(0.3,0.3)
                on_press: app.show_clients()
        Button:
            id:quit_button
            text: "Exit"
            size_hint:(0.2,0.2)
            pos_hint:{'center_x':0.5,'center_y':0.5}
            on_press: app.stop()

<TestSelectHand>:
    sel_hand_w:sel_hand_w
    BoxLayout:
        orientation: "vertical"
        size_hint: 0.9, 1
        pos_hint: {'center_y':0.5, 'center_x': 0.5}
        spacing: 25
        padding: 25
        SelectableHand:
            id:sel_hand_w
            pos_hint: {'center_y':0.5, 'center_x': 0.5}
        BoxLayout:
            size_hint: 0.8,0.3
            pos_hint: {'center_y': 0.8, 'center_x': 0.5}
            spacing: 20
            padding: 10
            orientation: "horizontal"
            Button:
                text: "Deal"
                size_hint: 0.5,0.5
                on_press: root.deal_hand()
            Button:
                text: "Get Selected"
                size_hint: 0.5,0.5
                on_press:root.get_selected()
            Button:
                text: "Back"
                size_hint: 0.5,0.5
                on_press: root.manager.current = "test_menu"

<TestSelectCard>:
    back_btn: back_btn
    selCard: selCard
    rootbox:rootbox
    FloatLayout:
        BoxLayout:
            id: rootbox
            orientation: "vertical"
            size_hint: 1,1
            spacing: 10
            padding: 10
            SelectableCard:
                pos_hint: {'center_x': 0.5, 'top': 0.2}
                id:selCard
            BoxLayout:
                orientation: "horizontal"
                size_hint: 1,0.4
                spacing: 15
                padding: 15
                Button:
                    text: "Get Card"
                    size_hint: 0.5,0.3
                    on_press: root.new_card()
                Button:
                    id: back_btn
                    size_hint: 0.5,0.3
                    on_press: root.manager.current = "test_menu"
