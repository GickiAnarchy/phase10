<P10TopBorder>:
    opp_name_lbl: opp_name_lbl
    opp_cur_phase: opp_cur_phase
    goal_1: goal_1
    goal_2: goal_2
    orientation: "horizontal"
    size_hint: 1.0, 0.10
    Label:
        id: opp_name_lbl
        size_hint: 0.35, 1.0
    BoxLayout:
        orientation: "vertical"
        size_hint: 0.65, 1.0
        Label:
            id: opp_cur_phase
            size_hint: 1.0, 0.5
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1.0, 0.5
            Label:
                id: goal_1
            Label:
                id: goal_2


<P10BottomBorder>:
    draw_button: draw_button
    discard_button: discard_button
    orientation: "horizontal"
    size_hint: 1.0, 0.10
    Button:
        id: draw_button
        text: "Draw"
        disabled: True
        on_press: root.draw_card()
    Button:
        id: play_button
        text: "Play"
        disabled: True
        on_press: root.play_card()
    Button:
        id: discard_button
        text: "Discard"
        disabled: True
        on_press: root.discard_card()


<P10Table>:
    deck_center: deck_center
    discards_center: discards_center
    goal_tl: goal_tl
    goal_tr: goal_tr
    goal_bl: goal_bl
    goal_br: goal_br
    hand_bc: hand_bc
    size_hint: 0.8, 0.75
    pos_hint: {"center_x": 0.5}
    AnchorLayout:
        anchor_y: 'center'
        anchor_x: 'center'
        BoxLayout:
            orientation: 'horizontal'
            SelectableDiscards:
                id: discards_center
            SelectableDeck:
                id: deck_center
    AnchorLayout:
        anchor_y: 'top'
        anchor_x: 'left'
        GoalButton:
            id: goal_tl
    AnchorLayout:
        anchor_y: 'top'
        anchor_x: 'right'
        GoalButton:
            id: goal_tr
    AnchorLayout:
        anchor_y: 'bottom'
        anchor_x: 'left'
        GoalButton:
            id: goal_bl
    AnchorLayout:
        anchor_y: 'bottom'
        anchor_x: 'right'
        GoalButton:
            id: goal_br
    AnchorLayout:
        anchor_y: 'bottom'
        anchor_x: 'center'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1.0, 0.35
            SelectableHand:
                id: hand_bc
            
    


<Phase10App>:
    p10_top: p10_top
    p10_bottom: p10_bottom
    p10_table: p10_table
    BoxLayout:
        orientation: "horizontal"
        size: self.width, self.height
        P10TopBorder:
            id: p10_top
        P10Table:
            id: p10_table
        P10BottomBorder:
            id: p10_bottom