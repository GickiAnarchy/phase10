<InfoWidget>:
    orientation: 'vertical'
    size_hint: 0.3,0.2
    #size: dp(200), dp(100)
    padding: dp(10)
    spacing: dp(5)
    canvas.before:
        Color:
            rgba: (0.2, 0.2, 0.2, 0.5)  # Background color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(10)]


<NameInfoWidget>:
    Label:
        id: name_label
        font_size: '16sp'
        halign: 'center'
        valign: 'middle'
        size_hint_y: None
        height: self.texture_size[1]


<PlayerInfoWidget>:
    Label:
        text: root.player_name
        font_size: '16sp'
        halign: 'center'
        valign: 'middle'
        size_hint_y: None
        height: self.texture_size[1]
    
    Label:
        text: "Score: {}".format(root.player_score)
        font_size: '14sp'
        halign: 'center'
        valign: 'middle'
        size_hint_y: None
        height: self.texture_size[1]

    Label:
        text: "Phase: {}".format(root.current_phase)
        font_size: '14sp'
        halign: 'center'
        valign: 'middle'
        size_hint_y: None
        height: self.texture_size[1]

    Label:
        text: "Active" if root.is_active else "Inactive"
        font_size: '14sp'
        color: (0, 1, 0, 1) if root.is_active else (1, 0, 0, 1)
        halign: 'center'
        valign: 'middle'
        size_hint_y: None
        height: self.texture_size[1]


