<PlayerPopup>:
    title: "Who Are You"
    auto_dismiss : True
    size_hint: 0.4,0.4
    BoxLayout:
        orientation:"vertical"
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1,0.7
            BoxLayout:
                orientation:"vertical"
                size_hint: 0.5,1
                Label:
                    text: "Name:"
                Label:
                    text: "PIN"
            BoxLayout:
                orientation:"vertical"
                size_hint: 0.5,1
                TextInput:
                    id: name_input
                    multiline: False
                TextInput:
                    id: pin_input
                    multiline: False
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1,0.3
            padding: 10
            spacing: 10
            Button:
                id: player_btn
                text: "Create"
                on_press: root.create_player()
            Button:
                text: "Cancel"
                on_press: root.dismiss()

<OpenScreen>:
    BoxLayout:
        orientation: "vertical"
        Image:
            source: "assets/images/CardBack.png"
            size_hint: 1,0.7
            pos_hint: {'center_x': 0.5, 'center_y':0.5}
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.3
            spacing: 50
            padding: 50
            Button:
                text: "New Player"
                on_press: root.player_pop(self)
                size_hint: 0.5,0.7
            Button:
                text: "Load Player"
                size_hint: 0.5,0.7