<Loading>:
    BoxLayout:
        orientation: "vertical"
        AsyncImage:
            source: "./assets/images/CardBack.png"
            pos_hint: {"center_x":0.5}


<NameScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "What is your name?"
        TextInput:
            id: name_input
            multiline: False
        Button:
            id: connect_button
            text: "Connect"
            on_release: app.connect_player(name_input.text)

<PlayerInfo>:
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'bottom'
        size_hint: 0.15,0.15
        GridLayout:
            cols: 2
            rows: 2
            Label:
                size_hint: 0.5,0.5
                text: player_name
            Label:
                size_hint: 0.5,0.5
                text: player_score
            Label:
                size_hint: 0.5,0.5
                text: player_phase
            Label:
                size_hint: 0.5,0.5
                text: player_is_active

<TestScreen>:
    conn_btn: conn_btn
    name_input: name_input
    top_box: top_box
    BoxLayout:
        id: top_box
        orientation: "vertical"
        size_hint: 0.6, 0.4
        pos_hint: {'center_y':0.8, 'center_x': 0.5}
        Label:
            text: "Name"
        TextInput:
            id: name_input
    GridLayout:
        cols: 3
        size_hint: 0.6,0.2
        pos_hint: {'center_y':0.1, 'center_x':0.5}
        Button:
            id: conn_btn
            text:"Home"
            disabled: True
        Button:
            text: "Get Player"
            on_press: app.root.current = "namescreen"
        Button:
            text: "Player Info Box"
            on_press: root.show_player_info()
        Button:
            text: "3"
            on_press: root.send_five()
            disabled: True
        Button:
            text: "4"
            on_press: root.send_five()
            disabled: True
        Button:
            text: "Test Server Msg"
            on_press: app.test_client()